var firstindex=this.replaced_atch_str.lastIndexOf('<w:sectPr ');var lastindex=this.replaced_atch_str.lastIndexOf('</w:sectPr></w:body>');var sectPr=this.replaced_atch_str.substr(firstindex,lastindex-firstindex);this.replaced_worddata=this.replaced_atch_str.substr(0,firstindex)+eachtable+sectPr+this.replaced_atch_str.substr(lastindex);return this._insertAttach();},_insertAttach:function(){var some_data=new Packages.java.lang.String(this.replaced_worddata);var value=some_data.getBytes();var tableName=this.source_table_name;var sys_id=this.sysid;var filename=this.filename+'.doc';var content_type='application/msword';var attachment=new Attachment();attachment.write(tableName,sys_id,filename,content_type,value);var returnid='';var gratch=new GlideRecord("sys_attachment");gratch.addQuery("table_sys_id",sys_id);gratch.addQuery('sys_created_by',gs.getUserName());gratch.orderByDesc('sys_created_on');gratch.query();if(gratch.next()){returnid=gratch.sys_id;}
